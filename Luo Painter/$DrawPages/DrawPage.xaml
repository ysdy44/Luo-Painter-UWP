                                            <ToolTip Content="{strings:UI Type=Transparency_TransparencyType}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                                        </ToolTipService.ToolTip>
                                        <ListBoxItem Content="{strings:UI Type=Brush_Linear}"/>
                                        <ListBoxItem Content="{strings:UI Type=Brush_Radial}"/>
                                        <ListBoxItem Content="{strings:UI Type=Brush_Elliptical}"/>
                                    </ListBox>
                                    <Grid ColumnSpacing="4" Padding="10,0" MinWidth="280" Height="60"
                                          Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
