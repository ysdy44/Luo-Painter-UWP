                                    <ListBoxItem Content="{strings:UI Type=Export_Object_Layers}"/>
                                    <ListBoxItem Content="{strings:UI Type=Export_Object_Layer}"/>
                                </ListBox>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Brush">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <ListBox x:Name="BrushComboBox" SelectedIndex="0" Margin="10,4" Style="{StaticResource AppSegmentListBoxStyle}"
                                        Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <ToolTipService.ToolTip>
                                            <ToolTip Content="{strings:UI Type=Brush_GradientType}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                                        </ToolTipService.ToolTip>
                                        <ListBoxItem Content="{strings:UI Type=Brush_Linear}"/>
                                        <ListBoxItem Content="{strings:UI Type=Brush_Radial}"/>
                                        <ListBoxItem Content="{strings:UI Type=Brush_Elliptical}"/>
                                    </ListBox>
                                    <Grid ColumnSpacing="4" Padding="10,0" MinWidth="280" Height="60"
                                          Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
