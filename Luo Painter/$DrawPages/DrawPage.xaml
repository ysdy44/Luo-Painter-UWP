                                                                  Visibility="{x:Bind SymmetryIndexToVisibilityConverter(SymmetryComboBox.SelectedIndex), Mode=OneWay}"
                                                                  Header="{strings:UI Type=PaintBrushMulti_Sectors}"/>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="View">
                                <StackPanel Margin="0,5" Orientation="{x:Bind DeviceHubToOrientationHorizontalConverter(Device), Mode=OneWay}" >
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <hsvColorPickers:NumberSlider x:Name="RadianSlider" Value="0" Minimum="-180" Maximum="180" Unit="º" Decrease="True" TickFrequency="60" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" 
                                                                      Header="{strings:UI Type=View_Radian}"/>
