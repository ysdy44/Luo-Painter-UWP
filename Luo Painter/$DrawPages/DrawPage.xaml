<Page
    x:Class="Luo_Painter.DrawPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Windows10version1903="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 8)"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:transformers="using:FanKit.Transformers"
    xmlns:local="using:Luo_Painter"
    xmlns:controls="using:Luo_Painter.Controls"
    xmlns:elements="using:Luo_Painter.Elements"
    xmlns:hsvColorPickers="using:Luo_Painter.HSVColorPickers"
    xmlns:strings="using:Luo_Painter.Strings"
    xmlns:ui="using:Luo_Painter.UI"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    NavigationCacheMode="Required"
    mc:Ignorable="d" 
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    FlowDirection="{x:Bind Direction}"
    >

    <!--Extension-->
    <FrameworkElement.Tag>
        <elements:ApplicationTitleBarExtension x:Name="ApplicationView" TitleBarColor="{ThemeResource AppBackgroundColorDark}" AccentTitleBarColor="{ThemeResource AppBackgroundColorDark}"/>
    </FrameworkElement.Tag>

    <FrameworkElement.Resources>
        <!--Transformer-->
        <transformers:CanvasOperator x:Name="Operator" DestinationControl="{x:Bind CanvasControl}"/>
        <transformers:CanvasTransformer x:Name="Transformer" />
        <!--Extension-->
        <ui:ApplicationBrushesExtension x:Name="ApplicationBrushes"/>
        <!--Storyboard-->
        <!--Radian-->
        <Storyboard x:Name="RadianStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Value" Storyboard.TargetName="RadianSlider" EnableDependentAnimation="True">
                <SplineDoubleKeyFrame Value="0" KeyTime="0:0:0.2" KeySpline="0.5,1.0 1,1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <!--Scale-->
        <Storyboard x:Name="ScaleStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Value" Storyboard.TargetName="ScaleSlider" EnableDependentAnimation="True">
                <SplineDoubleKeyFrame Value="23" KeyTime="0:0:0.2" KeySpline="0.5,1.0 1,1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <!--Flyout-->
        <Flyout x:Name="ColorFlyout" Placement="Top" Windows10version1903:ShouldConstrainToRootBounds="False" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
            <controls:ColorPicker2 x:Name="ColorPicker" />
        </Flyout>
        <Flyout x:Name="NumberFlyout" Placement="Top" Windows10version1903:ShouldConstrainToRootBounds="False" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
            <hsvColorPickers:NumberPicker x:Name="NumberPicker" />
        </Flyout>
    </FrameworkElement.Resources>

    <Grid Background="{ThemeResource AppBackgroundDark}">

        <!--VisualState-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <!--Normal-->
                <VisualState x:Name="AppBarNormal"/>
                <!--Preview-->
                <VisualState x:Name="AppBarPreview">
                    <VisualState.Setters>
                        <Setter Target="HeadGrid.Visibility" Value="Collapsed"/>
                        <Setter Target="AppBarHeadGrid.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>
                <!--Overlay-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--Dock-->
                        <Setter Target="DockLeftButton.Visibility" Value="Collapsed"/>
                        <Setter Target="DockRightButton.Visibility" Value="Collapsed"/>

                        <!--Split-->
                        <Setter Target="SplitLeftButton.Visibility" Value="Visible"/>
                        <Setter Target="SplitRightButton.Visibility" Value="Visible"/>

                        <Setter Target="SplitRightView.DisplayMode" Value="Overlay"/>
                        <Setter Target="SplitLeftView.DisplayMode" Value="Overlay"/>
                    </VisualState.Setters>
                </VisualState>
                <!--Inline-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1080"/>
                    </VisualState.StateTriggers>
                    <!--90+900+90=1080-->
                    <VisualState.Setters>
                        <Setter Target="HeadGrid.MaxWidth" Value="900"/>
                        <Setter Target="AppBarHeadGrid.MaxWidth" Value="900"/>
                    </VisualState.Setters>
                </VisualState>
                <!--Inline-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1300"/>
                    </VisualState.StateTriggers>
                    <!--90+1120+90=1300-->
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>
                <!--UnFullScreen-->
                <VisualState x:Name="UnFullScreen"/>
                <!--FullScreen-->
                <VisualState x:Name="FullScreen">
                    <VisualState.Setters>
                        <!--Head-->
                        <Setter Target="FullScreenButton.Visibility" Value="Collapsed"/>
                        <Setter Target="UnFullScreenButton.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>
                <!--Phone-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--Head-->
                        <Setter Target="HomeButton.Visibility" Value="Collapsed"/>
                        <Setter Target="FullScreenButton.Visibility" Value="Collapsed"/>
                        <Setter Target="UndoButton.Visibility" Value="Collapsed"/>
                        <Setter Target="RedoButton.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
                <!--Pad-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--Head-->
                        <Setter Target="FullScreenButton.Visibility" Value="Collapsed"/>
                        <Setter Target="RedoButton.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
                <!--PC-->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="900"/>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>

                <!--Phone-->
                <VisualState x:Name="Phone">
                    <!--
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    -->
                    <VisualState.Setters>
                        <!--AppBar-->
                        <Setter Target="PaintScrollViewer.Margin" Value="0,0,0,49"/>
                        <Setter Target="PaintScrollViewer.Padding" Value="10,0"/>
                        <Setter Target="PaintScrollViewer.CornerRadius" Value="0"/>
                        <!--AppBar-->
                        <Setter Target="AppBarBorder.CornerRadius" Value="0"/>
                        <Setter Target="AppBarBorder.Margin" Value="0"/>
                        <Setter Target="AppBarBorder.HorizontalAlignment" Value="Stretch"/>
                        <Setter Target="AppBarBorder.BorderThickness" Value="0,1,0,0"/>
                        <Setter Target="AppBarGrid.Margin" Value="0"/>
                        <Setter Target="AppBarGrid.HorizontalAlignment" Value="Stretch"/>
                        <Setter Target="SwitchPresenter.Margin" Value="0"/>
                    </VisualState.Setters>
                </VisualState>

                <!--Pad-->
                <VisualState x:Name="Pad">
                    <!--
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"/>
                    </VisualState.StateTriggers>
                    -->
                    <VisualState.Setters>
                        <!--AppBar-->
                        <Setter Target="PaintScrollViewer.Margin" Value="0,10,0,60"/>
                        <!--AppBar-->
                        <Setter Target="AppBarBorder.CornerRadius" Value="8,8,0,0"/>
                        <Setter Target="AppBarBorder.Margin" Value="0"/>
                        <Setter Target="AppBarBorder.BorderThickness" Value="1,1,1,0"/>
                        <Setter Target="AppBarGrid.Margin" Value="0"/>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="PC">
                    <!--
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="900"/>
                    </VisualState.StateTriggers>
                    -->
                </VisualState>

                <!--Hub-->
                <VisualState x:Name="Hub">
                    <!--
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1200"/>
                    </VisualState.StateTriggers>
                    -->
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!--Body-->
        <SplitView 
            x:Name="SplitRightView"
            Margin="0,50,0,0"
            PanePlacement="Right"
            OpenPaneLength="281"
            DisplayMode="Inline"
            PaneBackground="{ThemeResource SystemControlAcrylicWindowBrush}"
            >
            <SplitView.Pane>
                <Grid Padding="8,8,8,0" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource AppStroke}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <elements:IndexGrid Index="{x:Bind MenuListBox.SelectedIndex, Mode=OneWay}">
                        <controls:ToolListView x:Name="ToolListView" Visibility="Visible"/>
                        <controls:BrushGridView x:Name="BrushGridView" Visibility="Collapsed"/>
                        <controls:SizeListView x:Name="SizeListView" Visibility="Collapsed"/>
                        <controls:HistoryListView x:Name="HistoryListView" ItemsSource="{x:Bind History.Source}" Visibility="Collapsed"/>
                    </elements:IndexGrid>
                    <ListBox
                        x:Name="MenuListBox"
                        Grid.Row="1"
                        SelectedIndex="1"
                        >
                        <ListBoxItem Content="{strings:OptionIcon Type=ToolMenu}">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="{strings:Option Type=ToolMenu}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                            </ToolTipService.ToolTip>
                        </ListBoxItem>
                        <ListBoxItem Content="{strings:OptionIcon Type=BrushMenu}">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="{strings:Option Type=BrushMenu}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                            </ToolTipService.ToolTip>
                        </ListBoxItem>
                        <ListBoxItem Content="{strings:OptionIcon Type=SizeMenu}">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="{strings:Option Type=SizeMenu}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                            </ToolTipService.ToolTip>
                        </ListBoxItem>
                        <ListBoxItem Content="{strings:OptionIcon Type=HistoryMenu}">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="{strings:Option Type=HistoryMenu}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                            </ToolTipService.ToolTip>
                        </ListBoxItem>
                    </ListBox>
                </Grid>
            </SplitView.Pane>
            <SplitView 
                x:Name="SplitLeftView"
                PanePlacement="Left" 
                OpenPaneLength="281" 
                DisplayMode="Inline" 
                PaneBackground="{ThemeResource SystemControlAcrylicWindowBrush}" 
                >
                <SplitView.Pane>
                    <Grid BorderThickness="1,0,0,0" BorderBrush="{ThemeResource AppStroke}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <controls:LayerListView 
                            x:Name="LayerListView"
                            Grid.Row="1" 
                            ItemsSource="{x:Bind ObservableCollection}"
                            />
                        <SplitButton
                            Grid.Row="2" 
                            Margin="7,0" 
                            Height="40" 
                            CornerRadius="4" 
                            BorderThickness="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            CommandParameter="{strings:OptionType Type=AddBitmapLayer}"
                            Command="{x:Bind Command}" 
                            >
                            <ToolTipService.ToolTip>
                                <ToolTip Content="{strings:Option Type=LayerNewMenu}" Style="{StaticResource AppToolTipStyle}"/>
                            </ToolTipService.ToolTip>
                            <SplitButton.Flyout>
                                <MenuFlyout Placement="TopEdgeAlignedRight">
                                    <!--New-->
                                    <MenuFlyoutSeparator Margin="16,6,16,12">
                                        <Control.Template>
                                            <ControlTemplate TargetType="MenuFlyoutSeparator">
                                                <TextBlock                                    
                                                    IsTextSelectionEnabled="True"                                   
                                                    FontWeight="Medium" 
                                                    TextTrimming="CharacterEllipsis" 
                                                    FontSize="20" 
                                                    TextWrapping="Wrap"
                                                    VerticalAlignment="Center"
                                                    OpticalMarginAlignment="TrimSideBearings"
                                                    Text="{strings:Option Type=LayerNewMenu}"                                   
                                                    />
                                            </ControlTemplate>
                                        </Control.Template>
                                    </MenuFlyoutSeparator>
                                    <MenuFlyoutItem Text="{strings:Option Type=AddBitmapLayer}" Tag="{strings:OptionIcon Type=AddBitmapLayer}" CommandParameter="{strings:OptionType Type=AddBitmapLayer}" Command="{x:Bind Command}" Style="{StaticResource AppTagMenuFlyoutItemStyle}">
                                        <UIElement.KeyboardAccelerators>
                                            <KeyboardAccelerator Key="Insert"/>
                                        </UIElement.KeyboardAccelerators>
                                    </MenuFlyoutItem>
                                    <!--<MenuFlyoutItem Type="AddImageLayer" Command="{x:Bind Command}"/>-->
                                    <!--<MenuFlyoutItem Type="AddCurveLayer" Command="{x:Bind Command}"/>-->
                                    <MenuFlyoutItem Text="{strings:Option Type=AddFillLayer}" Tag="{strings:OptionIcon Type=AddFillLayer}" CommandParameter="{strings:OptionType Type=AddFillLayer}" Command="{x:Bind Command}" Style="{StaticResource AppTagMenuFlyoutItemStyle}"/>
                                </MenuFlyout>
                            </SplitButton.Flyout>
                            <SymbolIcon Margin="10,0,0,0" Symbol="Add"/>
                        </SplitButton>
                        <Grid Height="50" Padding="0,0,4,0" ColumnSpacing="4" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource AppStroke}" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Margin="16,0,0,0"
                                IsTextSelectionEnabled="True"
                                FontWeight="Medium" 
                                TextTrimming="CharacterEllipsis" 
                                FontSize="20" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center" 
                                OpticalMarginAlignment="TrimSideBearings"
                                Text="{strings:Option Type=LayerMenu}"
                                >
                                <!--Layers-->
                            </TextBlock>

                            <Button Grid.Column="1" Width="70" Height="40" CornerRadius="4" BorderThickness="1">
                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{strings:Option Type=LayerPropertyMenu}" Style="{StaticResource AppToolTipStyle}"/>
                                </ToolTipService.ToolTip>
                                <UIElement.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="F3"/>
                                </UIElement.KeyboardAccelerators>
                                <Button.Flyout>
                                    <Flyout x:Name="Flyout" Placement="RightEdgeAlignedTop" Windows10version1903:ShouldConstrainToRootBounds="False" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
                                        <StackPanel Spacing="2" Padding="6,4" Width="318">

                                            <TextBlock                    
                                                Margin="10,4,10,10" 
                                                IsTextSelectionEnabled="True"
                                                FontWeight="Medium" 
                                                TextTrimming="CharacterEllipsis" 
                                                FontSize="20" 
                                                TextWrapping="Wrap" 
                                                VerticalAlignment="Center" 
                                                OpticalMarginAlignment="TrimSideBearings"
                                                Text="{strings:Option Type=LayerPropertyMenu}"
                                                >                                
                                                <!--Properties-->
                                            </TextBlock>

                                            <!--Opacity-->
                                            <Border CornerRadius="8" BorderThickness="1" BorderBrush="{ThemeResource AppStroke}" Background="{ThemeResource AppOpacity}" >
                                                <hsvColorPickers:NumberSlider x:Name="OpacitySlider" Margin="0,5" Unit="%" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                          Header="{strings:UI Type=Layer_Opacity}"/>
                                            </Border>

                                            <!--BlendMode-->
                                            <TextBlock x:Name="BlendModeTextBlock" Margin="2,4" Foreground="{ThemeResource AppForeground}" Style="{StaticResource BaseTextBlockStyle}" 
                                                       Text="{strings:UI Type=Layer_BlendMode}"/>
                                            <ComboBox x:Name="BlendModeComboBox" >

                                                <ItemsControl.ItemContainerStyle>
                                                    <Style TargetType="ComboBoxItem">
                                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                    </Style>
                                                </ItemsControl.ItemContainerStyle>

                                                <!--None-->
                                                <ComboBoxItem Content="{strings:BlendItem Type=-1}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=Dissolve}" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource AppStroke}"/>
                                                <!--Darken-->
                                                <ComboBoxItem Content="{strings:BlendItem Type=Darken}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=Multiply}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=ColorBurn}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=LinearBurn}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=DarkerColor}" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource AppStroke}"/>
                                                <!--Lighten-->
                                                <ComboBoxItem Content="{strings:BlendItem Type=Lighten}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=Screen}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=ColorDodge}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=LinearDodge}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=LighterColor}" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource AppStroke}"/>
                                                <!--Contrast-->
                                                <ComboBoxItem Content="{strings:BlendItem Type=Overlay}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=SoftLight}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=HardLight}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=VividLight}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=LinearLight}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=PinLight}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=HardMix}" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource AppStroke}"/>
                                                <!--Difference-->
                                                <ComboBoxItem Content="{strings:BlendItem Type=Difference}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=Exclusion}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=Subtract}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=Division}" BorderThickness="0,0,0,1" BorderBrush="{ThemeResource AppStroke}"/>
                                                <!--Color-->
                                                <ComboBoxItem Content="{strings:BlendItem Type=Hue}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=Saturation}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=Color}"/>
                                                <ComboBoxItem Content="{strings:BlendItem Type=Luminosity}"/>

                                            </ComboBox>

                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button x:Name="RenameButton" Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Style="{StaticResource TextBlockButtonStyle}" 
                                                        CommandParameter="{strings:OptionType Type=LayerRenameMenu}" Command="{x:Bind Command}">
                                                    <ToolTipService.ToolTip>
                                                        <ToolTip Content="{strings:Option Type=LayerRenameMenu}" Style="{StaticResource AppToolTipStyle}"/>
                                                    </ToolTipService.ToolTip>
                                                    <UIElement.KeyboardAccelerators>
                                                        <KeyboardAccelerator Modifiers="None" Key="F2"/>
                                                    </UIElement.KeyboardAccelerators>
                                                    <SymbolIcon Symbol="Rename"/>
                                                </Button>
                                                <Button x:Name="RemoveButton" Width="70" Height="50" Foreground="{ThemeResource AppForeground}" Style="{StaticResource TextBlockButtonStyle}" 
                                                    CommandParameter="{strings:OptionType Type=Remove}" Command="{x:Bind Command}">
                                                    <ToolTipService.ToolTip>
                                                        <ToolTip Content="{strings:Option Type=Remove}" Style="{StaticResource AppToolTipStyle}"/>
                                                    </ToolTipService.ToolTip>
                                                    <SymbolIcon Symbol="Delete"/>
                                                </Button>
                                            </StackPanel>

                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                                <FontIcon Glyph="&#xE81E;" FontFamily="Segoe MDL2 Assets"/>
                            </Button>

                            <Button Grid.Column="2" Width="44" Height="40" CornerRadius="4" BorderThickness="1">
                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{strings:Option Type=LayerMenu}" Style="{StaticResource AppToolTipStyle}"/>
                                </ToolTipService.ToolTip>
                                <Button.Flyout>
                                    <MenuFlyout x:Name="MenuFlyout" Placement="BottomEdgeAlignedLeft">
                                        <MenuFlyoutSeparator Margin="16,6,16,12">
                                            <Control.Template>
                                                <ControlTemplate TargetType="MenuFlyoutSeparator">
                                                    <TextBlock                                    
                                                        IsTextSelectionEnabled="True"                                   
                                                        FontWeight="Medium" 
                                                        TextTrimming="CharacterEllipsis" 
                                                        FontSize="20" 
                                                        TextWrapping="Wrap"
                                                        VerticalAlignment="Center"
                                                        OpticalMarginAlignment="TrimSideBearings"
                                                        Text="{strings:Option Type=LayerMenu}"                                   
                                                        />
                                                </ControlTemplate>
                                            </Control.Template>
                                        </MenuFlyoutSeparator>

                                        <!--TagType-->
                                        <elements:TagTypeSegmented x:Name="TagTypeSegmented" Width="286" Height="40">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{strings:UI Type=Layer_TagType}" Style="{StaticResource AppToolTipStyle}"/>
                                            </ToolTipService.ToolTip>
                                        </elements:TagTypeSegmented>

                                        <MenuFlyoutItem x:Name="CutLayerItem" Text="{strings:Option Type=CutLayer}" Tag="{strings:OptionIcon Type=CutLayer}" CommandParameter="{strings:OptionType Type=CutLayer}" Command="{x:Bind Command}" Style="{StaticResource AppTagMenuFlyoutItemStyle}"/>
                                        <MenuFlyoutItem x:Name="CopyLayerItem" Text="{strings:Option Type=CopyLayer}" Tag="{strings:OptionIcon Type=CopyLayer}" CommandParameter="{strings:OptionType Type=CopyLayer}" Command="{x:Bind Command}" Style="{StaticResource AppTagMenuFlyoutItemStyle}"/>
                                        <MenuFlyoutItem x:Name="PasteLayerItem" Text="{strings:Option Type=PasteLayer}" Tag="{strings:OptionIcon Type=PasteLayer}" CommandParameter="{strings:OptionType Type=PasteLayer}" Command="{x:Bind Command}" Style="{StaticResource AppTagMenuFlyoutItemStyle}"/>
                                        <MenuFlyoutItem x:Name="RemoveItem" Text="{strings:Option Type=Remove}" Tag="{strings:OptionIcon Type=Remove}" CommandParameter="{strings:OptionType Type=Remove}" Command="{x:Bind Command}" Style="{StaticResource AppTagMenuFlyoutItemStyle}">
                                            <UIElement.KeyboardAccelerators>
                                                <KeyboardAccelerator Key="Delete"/>
                                            </UIElement.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutSeparator/>
                                        <MenuFlyoutItem x:Name="DuplicateItem" Text="{strings:Option Type=Duplicate}" Tag="{strings:OptionIcon Type=Duplicate}" CommandParameter="{strings:OptionType Type=Duplicate}" Command="{x:Bind Command}" Style="{StaticResource AppTagMenuFlyoutItemStyle}">
                                            <UIElement.KeyboardAccelerators>
                                                <KeyboardAccelerator Modifiers="Control" Key="D"/>
                                            </UIElement.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem x:Name="ExtractItem" Text="{strings:Option Type=Extract}" Tag="{strings:OptionIcon Type=Extract}" CommandParameter="{strings:OptionType Type=Extract}" Command="{x:Bind Command}" Style="{StaticResource AppTagMenuFlyoutItemStyle}">
                                            <UIElement.KeyboardAccelerators>
                                                <KeyboardAccelerator Modifiers="Control" Key="E"/>
                                            </UIElement.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem x:Name="MergeItem" Text="{strings:Option Type=Merge}" Tag="{strings:OptionIcon Type=Merge}" CommandParameter="{strings:OptionType Type=Merge}" Command="{x:Bind Command}" Style="{StaticResource AppTagMenuFlyoutItemStyle}">
                                            <UIElement.KeyboardAccelerators>
                                                <KeyboardAccelerator Modifiers="Control" Key="M"/>
                                            </UIElement.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem x:Name="FlattenItem" Text="{strings:Option Type=Flatten}" Tag="{strings:OptionIcon Type=Flatten}" CommandParameter="{strings:OptionType Type=Flatten}" Command="{x:Bind Command}" Style="{StaticResource AppTagMenuFlyoutItemStyle}">
                                            <UIElement.KeyboardAccelerators>
                                                <KeyboardAccelerator Modifiers="Control" Key="F"/>
                                            </UIElement.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <!--Group-->
                                        <MenuFlyoutSeparator/>
                                        <MenuFlyoutItem x:Name="GroupItem" Text="{strings:Option Type=Group}" Tag="{strings:OptionIcon Type=Group}" CommandParameter="{strings:OptionType Type=Group}" Command="{x:Bind Command}" Style="{StaticResource AppTagMenuFlyoutItemStyle}">
                                            <UIElement.KeyboardAccelerators>
                                                <KeyboardAccelerator Modifiers="Control" Key="G"/>
                                            </UIElement.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem x:Name="UngroupItem" Text="{strings:Option Type=Ungroup}" Tag="{strings:OptionIcon Type=Ungroup}" CommandParameter="{strings:OptionType Type=Ungroup}" Command="{x:Bind Command}" Style="{StaticResource AppTagMenuFlyoutItemStyle}">
                                            <UIElement.KeyboardAccelerators>
                                                <KeyboardAccelerator Modifiers="Control" Key="U"/>
                                            </UIElement.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem x:Name="ReleaseItem" Text="{strings:Option Type=Release}" Tag="{strings:OptionIcon Type=Release}" CommandParameter="{strings:OptionType Type=Release}" Command="{x:Bind Command}" Style="{StaticResource AppTagMenuFlyoutItemStyle}">
                                            <UIElement.KeyboardAccelerators>
                                                <KeyboardAccelerator Modifiers="Control" Key="R"/>
                                            </UIElement.KeyboardAccelerators>
                                        </MenuFlyoutItem>
                                        <!--
                                        <local:OptionItem Type="ExpandStroke" Command="{x:Bind Command}"/>
                                        <MenuFlyoutSeparator/>
                                        <local:OptionItem Type="Union" Command="{x:Bind Command}"/>
                                        <local:OptionItem Type="Exclude" Command="{x:Bind Command}"/>
                                        <local:OptionItem Type="Xor" Command="{x:Bind Command}"/>
                                        <local:OptionItem Type="Intersect" Command="{x:Bind Command}"/>
                                        -->
                                    </MenuFlyout>
                                </Button.Flyout>
                                <SymbolIcon Symbol="More"/>
                            </Button>

                        </Grid>
                    </Grid>
                </SplitView.Pane>
                <Grid x:Name="ContentGrid">

                    <Canvas x:Name="Canvas" FlowDirection="LeftToRight" Background="Transparent" >
                        <!--AlignmentGrid-->
                        <elements:AlignmentGridWithSpot x:Name="AlignmentGrid" IsHitTestVisible="False" />

                        <!--Canvas-->
                        <canvas:CanvasVirtualControl x:Name="CanvasVirtualControl" IsHitTestVisible="False" UseSharedDevice="True" CustomDevice="{x:Bind CanvasDevice}" />
                        <canvas:CanvasAnimatedControl x:Name="CanvasAnimatedControl" IsHitTestVisible="False" TargetElapsedTime="0:0:0.05" UseSharedDevice="True" CustomDevice="{x:Bind CanvasDevice}" />
                        <canvas:CanvasControl x:Name="CanvasControl" UseSharedDevice="True" CustomDevice="{x:Bind CanvasDevice}" />

                        <!--Simulate-->
                        <controls:SimulateCanvas x:Name="SimulateCanvas" />

                        <!--Straw-->
                        <hsvColorPickers:Strawer x:Name="StrawViewer">
                            <Path StrokeThickness="1" Stroke="Black" Fill="White">
                                <Path.Data>
                                    M38.61,99.44l22.22,22.31l22.219,-22.31l35.627,-0c1.646,-0 2.983,-1.337 2.983,-2.983l0,-93.474c0,-1.646 -1.337,-2.983 -2.983,-2.983l-115.693,0c-1.646,0 -2.983,1.337 -2.983,2.983l-0,93.474c-0,1.646 1.337,2.983 2.983,2.983l35.627,-0Z
                                </Path.Data>
                            </Path>
                            <Border Canvas.Left="5" Canvas.Top="4" Width="112" Height="90" Background="{ThemeResource AppBackgroundDark}">
                                <canvas:CanvasControl x:Name="StrawCanvasControl" Width="112" Height="90" UseSharedDevice="True" CustomDevice="{x:Bind CanvasDevice}" />
                            </Border>
                            <FontIcon Canvas.Left="44" Canvas.Top="22" FontSize="40" Glyph="&#x2BD0;" Foreground="White" FontFamily="Segoe UI Symbol" />
                        </hsvColorPickers:Strawer>

                    </Canvas>

                    <!--Split-->
                    <Button x:Name="SplitLeftButton" Visibility="Collapsed" Width="24" Height="110" CornerRadius="0,6,6,0" HorizontalAlignment="Left" BorderThickness="0,1,1,1" BorderBrush="{ThemeResource AppStroke}" Background="{ThemeResource AppBackground}" >
                        <Line X1="0" X2="0" Y1="0" Y2="36" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeThickness="3" Stroke="{ThemeResource AppForeground}"/>
                    </Button>
                    <Button x:Name="SplitRightButton" Visibility="Collapsed" Width="24" Height="110" CornerRadius="6,0,0,6" HorizontalAlignment="Right" BorderThickness="1,1,0,1" BorderBrush="{ThemeResource AppStroke}" Background="{ThemeResource AppBackground}" >
                        <Line X1="0" X2="0" Y1="0" Y2="36" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeThickness="3" Stroke="{ThemeResource AppForeground}"/>
                    </Button>

                    <!--AppBar-->
                    <controls:PaintScrollViewer
                        x:Name="PaintScrollViewer" 
                        Visibility="Collapsed"
                        Padding="10" 
                        Margin="0,10,0,80"
                        CornerRadius="8" 
                        Width="{x:Bind ReverseDevicePhoneToWidth740Converter(Device), Mode=OneWay}"
                        >
                        <canvas:CanvasControl               
                            x:Name="InkCanvasControl" 
                            HorizontalAlignment="Center"
                            Width="240" 
                            Height="120" 
                            UseSharedDevice="True" 
                            CustomDevice="{x:Bind CanvasDevice}" 
                            />
                    </controls:PaintScrollViewer>

                    <!--AppBar-->
                    <Grid
                        x:Name="AppBarGrid"
                        Margin="22" 
                        MinWidth="426" 
                        MinHeight="50" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom" 
                        >

                        <Border 
                            x:Name="AppBarBorder"
                            CornerRadius="8" 
                            BorderThickness="1" 
                            BorderBrush="{ThemeResource AppStroke}" 
                            Background="{ThemeResource AppAcrylicElementBrush}" 
                            />

                        <!--SwitchPresenter-->
                        <ui:OptionSwitchPresenter x:Name="SwitchPresenter" Margin="12,0" MinHeight="50" >


                            <ui:OptionCase Value="CropCanvas">
                                <hsvColorPickers:NumberSlider x:Name="CropCanvasSlider" Margin="0,5" Value="0" Minimum="-180" Maximum="180" Unit="º" TickFrequency="12" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=CropCanvas_Radians}">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="Gray" Offset="0"/>
                                            <GradientStop Color="{ThemeResource SystemAccentColor}" Offset="0.5"/>
                                            <GradientStop Color="Gray" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Control.Background>
                                </hsvColorPickers:NumberSlider>
                            </ui:OptionCase>


                            <ui:OptionCase Value="Feather">
                                <hsvColorPickers:NumberSlider x:Name="FeatherSlider" Margin="0,5" Value="12" Minimum="1" Maximum="200" Decrease="True" TickFrequency="49" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=Feather}"/>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Grow">
                                <hsvColorPickers:NumberSlider x:Name="GrowSlider" Margin="0,5" Value="1" Minimum="1" Maximum="90" Decrease="True" TickFrequency="44" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=Grow}"/>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Shrink">
                                <hsvColorPickers:NumberSlider x:Name="ShrinkSlider" Margin="0,5" Value="1" Minimum="1" Maximum="90" Decrease="True" TickFrequency="44" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=Shrink}"/>
                            </ui:OptionCase>


                            <ui:OptionCase Value="Move">
                                <controls:MovePicker x:Name="MovePicker"/>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Transform">
                                <StackPanel>
                                    <Grid ColumnSpacing="2" Height="50" MinWidth="280" MaxWidth="360">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>
                                        <ToggleButton x:Name="TransformSnapButton" IsEnabled="False" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch">
                                            <StackPanel Spacing="12" Orientation="Horizontal">
                                                <FontIcon Glyph="&#xE2AC;" FontFamily="Segoe MDL2 Assets"/>
                                                <TextBlock VerticalAlignment="Center"
                                                           Text="{strings:UI Type=Transform_Snap}"/>
                                            </StackPanel>
                                        </ToggleButton>
                                        <ToggleButton x:Name="TransformRatioButton" Grid.Column="1" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch">
                                            <StackPanel Spacing="12" Orientation="Horizontal">
                                                <FontIcon Glyph="&#xEA5F;" FontFamily="Segoe MDL2 Assets"/>
                                                <TextBlock VerticalAlignment="Center"
                                                           Text="{strings:UI Type=Transform_Ratio}"/>
                                            </StackPanel>
                                        </ToggleButton>
                                        <ToggleButton x:Name="TransformCenterButton" Grid.Column="2" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch">
                                            <StackPanel Spacing="12" Orientation="Horizontal">
                                                <FontIcon Glyph="&#xE958;" FontFamily="Segoe MDL2 Assets"/>
                                                <TextBlock VerticalAlignment="Center"
                                                           Text="{strings:UI Type=Transform_Center}"/>
                                            </StackPanel>
                                        </ToggleButton>
                                    </Grid>
                                    <Grid ColumnSpacing="4" MinWidth="480" Height="60" Margin="10,4" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="4*" MinWidth="68" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="4*" MinWidth="68" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="4*" MinWidth="68" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>
                                        <!--XY-->
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{ThemeResource AppForeground}" Style="{StaticResource BaseTextBlockStyle}"
                                                   Text="{strings:UI Type=Transform_X}"/>
                                        <hsvColorPickers:NumberButton x:Name="TXButton" Grid.Column="1" Minimum="-16384" Maximum="16384" />
                                        <TextBlock Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{ThemeResource AppForeground}" Style="{StaticResource BaseTextBlockStyle}"
                                                   Text="{strings:UI Type=Transform_Y}"/>
                                        <hsvColorPickers:NumberButton x:Name="TYButton" Grid.Column="1" Grid.Row="1" Minimum="-16384" Maximum="16384" />
                                        <!--WH-->
                                        <TextBlock Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{ThemeResource AppForeground}" Style="{StaticResource BaseTextBlockStyle}"
                                                   Text="{strings:UI Type=Transform_W}"/>
                                        <hsvColorPickers:NumberButton x:Name="TWButton" Grid.Column="3" Minimum="-16384" Maximum="16384" />
                                        <TextBlock Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{ThemeResource AppForeground}" Style="{StaticResource BaseTextBlockStyle}"
                                                   Text="{strings:UI Type=Transform_H}"/>
                                        <hsvColorPickers:NumberButton x:Name="THButton" Grid.Column="3" Grid.Row="1" Minimum="-16384" Maximum="16384" />
                                        <!--Skew-->
                                        <Canvas Grid.Column="4" Width="14" Height="14" HorizontalAlignment="Right" VerticalAlignment="Center" >
                                            <Polyline StrokeThickness="1.5" Stroke="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" >
                                                <Polyline.Points>
                                                    1,5 1,1 12,1 12,8 1,8 1,5
                                                </Polyline.Points>
                                            </Polyline>
                                            <Polyline StrokeThickness="1.5" Stroke="{ThemeResource ApplicationForegroundThemeBrush}" >
                                                <Polyline.Points>
                                                    1,5 1,1 12,5 12,12 1,8 1,5
                                                </Polyline.Points>
                                            </Polyline>
                                        </Canvas>
                                        <hsvColorPickers:NumberButton x:Name="TSButton" Grid.Column="5" Minimum="-180" Maximum="180" Unit="º"/>
                                        <!--Rotate-->
                                        <Canvas Grid.Column="4" Grid.Row="1" Width="14" Height="14" HorizontalAlignment="Right" VerticalAlignment="Center" >
                                            <Polyline StrokeThickness="1.5" Stroke="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" >
                                                <Polyline.Points>
                                                    12,12 11,8 9,4
                                                </Polyline.Points>
                                            </Polyline>
                                            <Polyline StrokeThickness="1.5" Stroke="{ThemeResource ApplicationForegroundThemeBrush}" >
                                                <Polyline.Points>
                                                    14,12 2,12 11,2
                                                </Polyline.Points>
                                            </Polyline>
                                        </Canvas>
                                        <hsvColorPickers:NumberButton x:Name="TRButton" Grid.Column="5" Grid.Row="1" Minimum="-180" Maximum="180" Unit="º"/>
                                    </Grid>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="FreeTransform">
                                <StackPanel>
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <controls:MovePicker x:Name="LTPicker" Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" />
                                        <controls:MovePicker x:Name="RTPicker" Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" />
                                    </StackPanel>
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <controls:MovePicker x:Name="LBPicker" Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" />
                                        <controls:MovePicker x:Name="RBPicker" Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" />
                                    </StackPanel>
                                </StackPanel>
                            </ui:OptionCase>


                            <ui:OptionCase Value="DisplacementLiquefaction">
                                <StackPanel>
                                    <ListBox x:Name="DisplacementLiquefactionModeComboBox" SelectedIndex="0" Margin="10,4" Style="{StaticResource AppSegmentListBoxStyle}">
                                        <ToolTipService.ToolTip>
                                            <ToolTip Content="{strings:UI Type=DisplacementLiquefaction_Tool}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                                        </ToolTipService.ToolTip>
                                        <ListBoxItem Content="{strings:UI Type=DisplacementLiquefaction_Push}"/>
                                        <ListBoxItem Content="{strings:UI Type=DisplacementLiquefaction_Pinch}"/>
                                        <ListBoxItem Content="{strings:UI Type=DisplacementLiquefaction_Expand}"/>
                                        <ListBoxItem Content="{strings:UI Type=DisplacementLiquefaction_TwirlLeft}"/>
                                        <ListBoxItem Content="{strings:UI Type=DisplacementLiquefaction_TwirlRight}"/>
                                        <ListBoxItem Content="{strings:UI Type=DisplacementLiquefaction_Reset}"/>
                                    </ListBox>
                                    <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}" >
                                        <hsvColorPickers:NumberSlider x:Name="DisplacementLiquefactionSizeSlider" Value="22" Minimum="1" Maximum="500" Decrease="True" TickFrequency="99" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" 
                                                                      Header="{strings:UI Type=DisplacementLiquefaction_Size}"/>
                                        <hsvColorPickers:NumberSlider x:Name="DisplacementLiquefactionPressureSlider" Value="12" Minimum="10" Maximum="100" Unit="%" Decrease="True" TickFrequency="30" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" 
                                                                      Header="{strings:UI Type=DisplacementLiquefaction_Pressure}"/>
                                    </StackPanel>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="GradientMapping">
                                <hsvColorPickers:GradientStopSelectorWithUI x:Name="GradientMappingSelector" Width="{x:Bind ReverseDevicePhoneToWidth740Converter(Device), Mode=OneWay}"/>
                            </ui:OptionCase>
                            <ui:OptionCase Value="RippleEffect">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="FrequencySlider" Value="140" Minimum="0" Maximum="300" Decrease="True" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" 
                                                                  Header="{strings:UI Type=RippleEffect_Frequency}"/>
                                    <hsvColorPickers:NumberSlider x:Name="PhaseSlider" Minimum="-100" Maximum="0" Unit="º" Decrease="True" TickFrequency="20" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" 
                                                                  Header="{strings:UI Type=RippleEffect_Phase}"/>
                                    <hsvColorPickers:NumberSlider x:Name="AmplitudeSlider" Value="60" Minimum="0" Maximum="200" Decrease="True" TickFrequency="40" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=RippleEffect_Amplitude}"/>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Threshold">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="ThresholdSlider" MinWidth="280" Minimum="-150" Maximum="150" Unit="º" Decrease="True" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Header="{strings:UI Type=Threshold}">
                                        <Control.Background>
                                            <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="Black" Offset="0"/>
                                                <GradientStop Color="White" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Control.Background>
                                    </hsvColorPickers:NumberSlider>
                                    <Grid ColumnSpacing="4" Padding="10,0" MinWidth="280" Height="60" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <hsvColorPickers:ColorButtonBase x:Name="ThresholdColor0Button"/>
                                        <hsvColorPickers:ColorButtonBase x:Name="ThresholdColor1Button" Grid.Column="2"/>
                                        <Button x:Name="ThresholdReverseButton" Grid.Column="1" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch" Style="{StaticResource AccentButtonStyle}"
                                                Content="{strings:UI Type=Threshold_Reverse}"/>
                                    </Grid>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="HSB">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <Canvas Margin="5,0" Width="162" Height="162">
                                        <Ellipse Width="162" Height="162" StrokeThickness="16" Fill="{ThemeResource AppOpacity}">
                                            <Shape.Stroke>
                                                <ImageBrush ImageSource="{x:Bind WheelImageSource.ImageSource}"/>
                                            </Shape.Stroke>
                                        </Ellipse>
                                        <Ellipse Width="162" Height="162" StrokeThickness="8">
                                            <UIElement.RenderTransformOrigin>
                                                0.5, 0.5
                                            </UIElement.RenderTransformOrigin>
                                            <UIElement.RenderTransform>
                                                <RotateTransform Angle="{x:Bind HSBHueSlider.Value, Mode=OneWay}"/>
                                            </UIElement.RenderTransform>
                                            <Shape.Stroke>
                                                <ImageBrush ImageSource="{x:Bind WheelImageSource.ImageSource}"/>
                                            </Shape.Stroke>
                                        </Ellipse>
                                        <Ellipse Canvas.Left="7" Canvas.Top="7" Width="148" Height="148" StrokeThickness="2" Stroke="White"/>
                                    </Canvas>
                                    <StackPanel Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}">
                                        <hsvColorPickers:NumberSlider x:Name="HSBHueSlider" Maximum="360" Unit="º" TickFrequency="60" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Header="{strings:UI Type=HSB_Hue}">
                                            <Control.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="Red" Offset="0"/>
                                                    <GradientStop Color="Yellow" Offset="0.16666667"/>
                                                    <GradientStop Color="Lime" Offset="0.33333333"/>
                                                    <GradientStop Color="Cyan" Offset="0.5"/>
                                                    <GradientStop Color="Blue" Offset="0.66666667"/>
                                                    <GradientStop Color="Fuchsia" Offset="0.83333333"/>
                                                    <GradientStop Color="Red" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Control.Background>
                                        </hsvColorPickers:NumberSlider>
                                        <hsvColorPickers:NumberSlider x:Name="HSBSaturationSlider" Value="100" Minimum="0" Maximum="400" Unit="%" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Header="{strings:UI Type=HSB_Saturation}">
                                            <Control.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="Gray" Offset="0"/>
                                                    <GradientStop Color="DodgerBlue" Offset="0.5"/>
                                                </LinearGradientBrush>
                                            </Control.Background>
                                        </hsvColorPickers:NumberSlider>
                                        <hsvColorPickers:NumberSlider x:Name="HSBBrightnessSlider" Value="0" Minimum="-100" Maximum="100" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Header="{strings:UI Type=HSB_Brightness}">
                                            <Control.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="Black" Offset="0"/>
                                                    <GradientStop Color="White" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Control.Background>
                                        </hsvColorPickers:NumberSlider>
                                    </StackPanel>
                                </StackPanel>
                            </ui:OptionCase>


                            <ui:OptionCase Value="Exposure">
                                <hsvColorPickers:NumberSlider x:Name="ExposureSlider" Margin="0,5" Minimum="-200" Maximum="200" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=Exposure}">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="White" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Control.Background>
                                </hsvColorPickers:NumberSlider>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Brightness">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <StackPanel Margin="0,22" MinWidth="90" Spacing="4" Orientation="Vertical">
                                        <Button x:Name="Brightness150Button" CornerRadius="4" Height="44" BorderThickness="1" HorizontalAlignment="Stretch">
                                            150
                                        </Button>
                                        <Button x:Name="Brightness125Button" CornerRadius="4" Height="44" BorderThickness="1" HorizontalAlignment="Stretch">
                                            125
                                        </Button>
                                        <Button x:Name="Brightness100Button" CornerRadius="4" Height="44" BorderThickness="1" HorizontalAlignment="Stretch">
                                            100
                                        </Button>
                                        <Button x:Name="Brightness75Button" CornerRadius="4" Height="44" BorderThickness="1" HorizontalAlignment="Stretch">
                                            75
                                        </Button>
                                        <Button x:Name="Brightness50Button" CornerRadius="4" Height="44" BorderThickness="1" HorizontalAlignment="Stretch">
                                            50
                                        </Button>
                                    </StackPanel>
                                    <controls:SplinePicker x:Name="BrightnessPicker" Background="{ThemeResource AppBackground}"/>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Saturation">
                                <hsvColorPickers:NumberSlider x:Name="SaturationSlider" Margin="0,5" Value="100" Minimum="0" Maximum="200" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=Saturation}">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="Gray" Offset="0"/>
                                            <GradientStop Color="#00A5FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Control.Background>
                                </hsvColorPickers:NumberSlider>
                            </ui:OptionCase>
                            <ui:OptionCase Value="HueRotation">
                                <hsvColorPickers:NumberSlider x:Name="HueRotationSlider" Margin="0,5" Minimum="0" Maximum="360" Unit="º" TickFrequency="60" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=HueRotation_Angle}">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#FFCE3B" Offset="0"/>
                                            <GradientStop Color="#72C075" Offset="0.125"/>
                                            <GradientStop Color="#46A7F6" Offset="0.25"/>
                                            <GradientStop Color="#784BB0" Offset="0.375"/>
                                            <GradientStop Color="#A336B5" Offset="0.5"/>
                                            <GradientStop Color="#EB2E6E" Offset="0.625"/>
                                            <GradientStop Color="#EC5449" Offset="0.75"/>
                                            <GradientStop Color="#FFA827" Offset="0.875"/>
                                            <GradientStop Color="#FFCE3B" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Control.Background>
                                </hsvColorPickers:NumberSlider>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Contrast">
                                <hsvColorPickers:NumberSlider x:Name="ContrastSlider" Margin="0,5" Minimum="-100" Maximum="100" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=Contrast}">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#888888" Offset="0"/>

                                            <GradientStop Color="#6D6D6D" Offset="0.4"/>
                                            <GradientStop Color="#909090" Offset="0.5"/>

                                            <GradientStop Color="#353535" Offset="0.6"/>
                                            <GradientStop Color="#C9C9C9" Offset="0.7"/>

                                            <GradientStop Color="#000000" Offset="0.8"/>
                                            <GradientStop Color="#FFFFFF" Offset="1"/>

                                        </LinearGradientBrush>
                                    </Control.Background>
                                </hsvColorPickers:NumberSlider>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Temperature">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="TemperatureSlider" Minimum="-100" Maximum="100" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=Temperature}">
                                        <Control.Background>
                                            <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="#3EADF5" Offset="0"/>
                                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                                <GradientStop Color="#F99652" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Control.Background>
                                    </hsvColorPickers:NumberSlider>
                                    <hsvColorPickers:NumberSlider x:Name="TintSlider" Minimum="-100" Maximum="100" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=Temperature_Tint}">
                                        <Control.Background>
                                            <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                                <GradientStop Color="#9680C9" Offset="0"/>
                                                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                                <GradientStop Color="#80763E" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Control.Background>
                                    </hsvColorPickers:NumberSlider>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="HighlightsAndShadows">
                                <StackPanel Margin="0,5" Orientation="{x:Bind DeviceHubToOrientationHorizontalConverter(Device), Mode=OneWay}" >
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <hsvColorPickers:NumberSlider x:Name="ShadowsSlider" Minimum="-100" Maximum="100" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=HighlightsAndShadows_Shadows}">
                                            <Control.Background>
                                                <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                                    <GradientStop Color="Black" Offset="0"/>
                                                    <GradientStop Color="Gray" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Control.Background>
                                        </hsvColorPickers:NumberSlider>
                                        <hsvColorPickers:NumberSlider x:Name="HighlightsSlider" Minimum="-100" Maximum="100" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=HighlightsAndShadows_Highlights}">
                                            <Control.Background>
                                                <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                                    <GradientStop Color="Gray" Offset="0"/>
                                                    <GradientStop Color="White" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Control.Background>
                                        </hsvColorPickers:NumberSlider>
                                    </StackPanel>
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <hsvColorPickers:NumberSlider x:Name="ClaritySlider" Minimum="-100" Maximum="100" Decrease="True" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=HighlightsAndShadows_Clarity}"/>
                                        <hsvColorPickers:NumberSlider x:Name="BlurSlider" Value="125" Minimum="0" Maximum="1000" Decrease="True" TickFrequency="250" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=HighlightsAndShadows_Blur}"/>
                                    </StackPanel>
                                </StackPanel>
                            </ui:OptionCase>


                            <ui:OptionCase Value="GammaTransfer">
                                <StackPanel Margin="0,5" Orientation="{x:Bind DeviceHubToOrientationHorizontalConverter(Device), Mode=OneWay}" >
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <Border Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" >
                                            <ListBox SelectedIndex="0" Style="{StaticResource AppSegmentListBoxStyle}">
                                                <ToolTipService.ToolTip>
                                                    <ToolTip Content="{strings:UI Type=GammaTransfer_ChannelSelect}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                                                </ToolTipService.ToolTip>
                                                <ListBoxItem x:Name="GTAItem" Content="{strings:UI Type=GammaTransfer_Alpha}"/>
                                                <ListBoxItem x:Name="GTRItem" Content="{strings:UI Type=GammaTransfer_Red}"/>
                                                <ListBoxItem x:Name="GTGItem" Content="{strings:UI Type=GammaTransfer_Green}"/>
                                                <ListBoxItem x:Name="GTBItem" Content="{strings:UI Type=GammaTransfer_Blue}"/>
                                            </ListBox>
                                        </Border>
                                        <!--#region Amplitude-->
                                        <hsvColorPickers:NumberSlider x:Name="GTAASlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Visibility="{x:Bind GTAItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=GammaTransfer_Amplitude}"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTARSlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="Red"
                                                                      Visibility="{x:Bind GTRItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=GammaTransfer_Amplitude}"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTAGSlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="GreenYellow"
                                                                      Visibility="{x:Bind GTGItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=GammaTransfer_Amplitude}"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTABSlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="DodgerBlue"
                                                                      Visibility="{x:Bind GTBItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}" 
                                                                      Header="{strings:UI Type=GammaTransfer_Amplitude}"/>
                                        <!--#endregion-->
                                    </StackPanel>
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <!--#region Exponent-->
                                        <hsvColorPickers:NumberSlider x:Name="GTEASlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                      Visibility="{x:Bind GTAItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=GammaTransfer_Exponent}"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTERSlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="Red"
                                                                      Visibility="{x:Bind GTRItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=GammaTransfer_Exponent}"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTEGSlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="GreenYellow"
                                                                      Visibility="{x:Bind GTGItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=GammaTransfer_Exponent}"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTEBSlider" Value="100" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="DodgerBlue"
                                                                      Visibility="{x:Bind GTBItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=GammaTransfer_Exponent}"/>
                                        <!--#endregion-->
                                        <!--#region Offset-->
                                        <hsvColorPickers:NumberSlider x:Name="GTOASlider" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" 
                                                                      Visibility="{x:Bind GTAItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=GammaTransfer_Offset}"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTORSlider" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="Red"
                                                                      Visibility="{x:Bind GTRItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=GammaTransfer_Offset}"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTOGSlider" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="GreenYellow"
                                                                      Visibility="{x:Bind GTGItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=GammaTransfer_Offset}"/>
                                        <hsvColorPickers:NumberSlider x:Name="GTOBSlider" Unit="%" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}" Background="DodgerBlue"
                                                                      Visibility="{x:Bind GTBItem.IsSelected, Mode=OneWay}" 
                                                                      Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}"
                                                                      Header="{strings:UI Type=GammaTransfer_Offset}"/>
                                        <!--#endregion-->
                                    </StackPanel>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Vignette">
                                <hsvColorPickers:NumberSlider x:Name="VignetteSlider" Margin="0,5" Value="10" Decrease="True" Unit="º" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=Vignette_Amount}"/>
                            </ui:OptionCase>
                            <ui:OptionCase Value="ColorMatch">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <hsvColorPickers:ColorButtonBase x:Name="ColorMatchSourceButton"/>
                                    <hsvColorPickers:ColorButtonBase x:Name="ColorMatchDestinationButton" Grid.Column="2"/>
                                    <Line Grid.Column="1" X2="64" VerticalAlignment="Center" StrokeThickness="1" Stroke="{ThemeResource ApplicationForegroundThemeBrush}" />
                                </Grid>
                            </ui:OptionCase>


                            <ui:OptionCase Value="GaussianBlur">
                                <hsvColorPickers:NumberSlider x:Name="GaussianBlurSlider" Margin="0,5" Value="10" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=GaussianBlur_BlurAmount}"/>
                            </ui:OptionCase>
                            <ui:OptionCase Value="DirectionalBlur">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="DirectionalBlurSlider" Value="10" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=DirectionalBlur_BlurAmount}"/>
                                    <hsvColorPickers:NumberSlider x:Name="DirectionalBlurAngleSlider" Minimum="0" Maximum="360" Unit="º" Decrease="True" TickFrequency="60" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=DirectionalBlur_Angle}"/>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Sharpen">
                                <hsvColorPickers:NumberSlider x:Name="SharpenSlider" Margin="0,5" Value="10" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=Sharpen_Amount}"/>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Shadow">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="ShadowAmountSlider" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=Shadow_Amount}"/>
                                    <hsvColorPickers:NumberSlider x:Name="ShadowOpacitySlider" Value="50" Unit="º" Decrease="True" TickFrequency="20" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=Shadow_Opacity}"/>
                                    <Grid ColumnSpacing="4" Padding="10,0" MinWidth="280" Height="60" 
                                            Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <hsvColorPickers:ColorButtonBase x:Name="ShadowColorButton"/>
                                        <Button Grid.Column="1" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch">
                                            <Button.Flyout>
                                                <Flyout Placement="Top" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
                                                    <hsvColorPickers:NumberSlider x:Name="ShadowXSlider" Margin="0,5" Width="280" Minimum="-200" Maximum="200" Foreground="{ThemeResource AppForeground}"
                                                            Header="{strings:UI Type=Shadow_X}"/>
                                                </Flyout>
                                            </Button.Flyout>
                                        </Button>
                                        <Button Grid.Column="2" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch">
                                            <Button.Flyout>
                                                <Flyout Placement="Top" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
                                                    <hsvColorPickers:NumberSlider x:Name="ShadowYSlider" Margin="0,5" Width="280" Minimum="-200" Maximum="200" Foreground="{ThemeResource AppForeground}"
                                                        Header="{strings:UI Type=Shadow_Y}"/>
                                                </Flyout>
                                            </Button.Flyout>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="EdgeDetection">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="EdgeDetectionSlider" Value="50" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" 
                                                                  Header="{strings:UI Type=EdgeDetection_Amount}"/>
                                    <hsvColorPickers:NumberSlider x:Name="EdgeDetectionBlurAmountSlider" Decrease="True" TickFrequency="20" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=EdgeDetection_BlurAmount}"/>
                                    <Grid ColumnSpacing="4" Padding="10,0" MinWidth="280" Height="60" 
                                            Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <ToggleButton x:Name="EdgeDetectionButton" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch"
                                                      Content="{strings:UI Type=EdgeDetection_OverlayEdges}"/>
                                        <ui:EdgeDetectionModeButton x:Name="EdgeDetectionModeButton" Grid.Column="1" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch"/>
                                    </Grid>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Morphology">
                                <ui:MorphologyNumberSlider x:Name="MorphologySlider" Margin="0,5" Minimum="-90" Maximum="90" TickFrequency="30" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=Morphology_Size}">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="{ThemeResource SystemAccentColor}" Offset="0"/>
                                            <GradientStop Color="Gray" Offset="0.5"/>
                                            <GradientStop Color="{ThemeResource SystemAccentColor}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Control.Background>
                                </ui:MorphologyNumberSlider>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Emboss">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="EmbossSlider" Value="10" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=Emboss_Amount}"/>
                                    <hsvColorPickers:NumberSlider x:Name="EmbossAngleSlider" Minimum="0" Maximum="360" Unit="º" Decrease="True" TickFrequency="60" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=Emboss_Angle}"/>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Straighten">
                                <hsvColorPickers:NumberSlider x:Name="StraightenSlider" Margin="0,5" Minimum="-45" Maximum="45" Unit="º" TickFrequency="15" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=Straighten_Angle}">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="Gray" Offset="0"/>
                                            <GradientStop Color="{ThemeResource SystemAccentColor}" Offset="0.5"/>
                                            <GradientStop Color="Gray" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Control.Background>
                                </hsvColorPickers:NumberSlider>
                            </ui:OptionCase>


                            <ui:OptionCase Value="Posterize">
                                <hsvColorPickers:NumberSlider x:Name="PosterizeSlider" Margin="0,5" Value="2" Minimum="2" Maximum="12" Decrease="True" TickFrequency="2" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=Posterize_Count}"/>
                            </ui:OptionCase>
                            <ui:OptionCase Value="LuminanceToAlpha">
                                <ListBox x:Name="LuminanceToAlphaComboBox" SelectedIndex="0" Margin="12,0" Style="{StaticResource AppSegmentListBoxStyle}">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{strings:UI Type=LuminanceToAlpha_Background}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                                    </ToolTipService.ToolTip>
                                    <ListBoxItem Content="{strings:UI Type=LuminanceToAlpha_Normal}"/>
                                    <ListBoxItem Content="{strings:UI Type=LuminanceToAlpha_WhitePaper}"/>
                                    <ListBoxItem Content="{strings:UI Type=LuminanceToAlpha_BlackPaper}"/>
                                </ListBox>
                            </ui:OptionCase>
                            <ui:OptionCase Value="ChromaKey">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="ChromaKeySlider" Decrease="True" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=ChromaKey_Tolerance}"/>
                                    <Grid ColumnSpacing="4" Padding="10,0" MinWidth="280" Height="60" 
                                            Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <ToggleButton x:Name="ChromaKeyInvertButton" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch"
                                                      Content="{strings:UI Type=ChromaKey_Invert}"/>
                                        <hsvColorPickers:ColorButtonBase x:Name="ChromaKeyColorButton" Grid.Column="1"/>
                                        <ToggleButton x:Name="ChromaKeyFeatherButton" Grid.Column="2" CornerRadius="4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch"
                                                      Content="{strings:UI Type=Feather}"/>
                                    </Grid>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Border">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <Border Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <ListBox x:Name="BorderXComboBox" SelectedIndex="1" Margin="10,4" Style="{StaticResource AppSegmentListBoxStyle}">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{strings:UI Type=Border_EdgeBehaviorX}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                                            </ToolTipService.ToolTip>
                                            <ListBoxItem Content="{strings:UI Type=Border_Clamp}"/>
                                            <ListBoxItem Content="{strings:UI Type=Border_Wrap}"/>
                                            <ListBoxItem Content="{strings:UI Type=Border_Mirror}"/>
                                        </ListBox>
                                    </Border>
                                    <Border Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <ListBox x:Name="BorderYComboBox" SelectedIndex="1" Margin="10,4" Style="{StaticResource AppSegmentListBoxStyle}">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{strings:UI Type=Border_EdgeBehaviorY}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                                            </ToolTipService.ToolTip>
                                            <ListBoxItem Content="{strings:UI Type=Border_Clamp}"/>
                                            <ListBoxItem Content="{strings:UI Type=Border_Wrap}"/>
                                            <ListBoxItem Content="{strings:UI Type=Border_Mirror}"/>
                                        </ListBox>
                                    </Border>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Colouring">
                                <hsvColorPickers:NumberSlider x:Name="ColouringSlider" Margin="0,5" Minimum="0" Maximum="360" TickFrequency="60" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                              Header="{strings:UI Type=Colouring_Angle}">
                                    <Control.Background>
                                        <LinearGradientBrush StartPoint=" 0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#FFCE3B" Offset="0"/>
                                            <GradientStop Color="#72C075" Offset="0.125"/>
                                            <GradientStop Color="#46A7F6" Offset="0.25"/>
                                            <GradientStop Color="#784BB0" Offset="0.375"/>
                                            <GradientStop Color="#A336B5" Offset="0.5"/>
                                            <GradientStop Color="#EB2E6E" Offset="0.625"/>
                                            <GradientStop Color="#EC5449" Offset="0.75"/>
                                            <GradientStop Color="#FFA827" Offset="0.875"/>
                                            <GradientStop Color="#FFCE3B" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Control.Background>
                                </hsvColorPickers:NumberSlider>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Tint">
                                <hsvColorPickers:ColorButtonBase x:Name="TintColorButton"/>
                            </ui:OptionCase>
                            <ui:OptionCase Value="DiscreteTransfer">
                                <controls:CurvePanel 
                                    x:Name="CurvePanel" 
                                    Width="{x:Bind ReverseDevicePhoneToWidth740Converter(Device), Mode=OneWay}"
                                    Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}"
                                    />
                            </ui:OptionCase>


                            <ui:OptionCase Value="Lighting">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <hsvColorPickers:NumberSlider x:Name="LightDistanceSlider" Value="100" Minimum="0" Maximum="300" Decrease="True" TickFrequency="50" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=Lighting_Distance}"/>
                                    <hsvColorPickers:NumberSlider x:Name="LightAngleSlider" Value="60" Minimum="10" Maximum="90" Unit="º" Decrease="True" TickFrequency="40" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=Lighting_Angle}"/>
                                    <hsvColorPickers:NumberSlider x:Name="LightAmbientSlider" Unit="%" Decrease="True" TickFrequency="20" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}"
                                                                  Header="{strings:UI Type=Lighting_Ambient}"/>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Fog">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <Border Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <ListBox x:Name="FogComboBox" SelectedIndex="2" Margin="10,4" Style="{StaticResource AppSegmentListBoxStyle}">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{strings:UI Type=Fog_ScaleFactor}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                                            </ToolTipService.ToolTip>
                                            <x:Double>1</x:Double>
                                            <x:Double>2</x:Double>
                                            <x:Double>4</x:Double>
                                            <x:Double>8</x:Double>
                                            <x:Double>16</x:Double>
                                        </ListBox>
                                    </Border>
                                    <hsvColorPickers:NumberSlider x:Name="FogSlider" Value="50" Unit="%" Decrease="True" StepFrequency="25" TickFrequency="25" TickPlacement="Outside" Foreground="{ThemeResource AppForeground}"
                                                                  Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" 
                                                                  Header="{strings:UI Type=Fog_Amount}"/>
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Glass">
                                <StackPanel Margin="0,5" Orientation="{x:Bind ReverseDevicePhoneAndPadToOrientationHorizontalConverter(Device), Mode=OneWay}">
                                    <Border Width="{x:Bind ReverseDevicePhoneAndPadToWidth260Converter(Device), Mode=OneWay}" >
                                        <ListBox x:Name="GlassComboBox" SelectedIndex="2" Margin="10,4" Style="{StaticResource AppSegmentListBoxStyle}">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{strings:UI Type=Glass_ScaleFactor}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                                            </ToolTipService.ToolTip>
                                            <x:Double>1</x:Double>
