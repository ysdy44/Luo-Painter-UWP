                                                <ToolTip Content="{strings:Element Type=CompositeAdd}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                                            </ToolTipService.ToolTip>
                                        </ListBoxItem>
                                        <ListBoxItem Content="{strings:ElementIcon Type=CompositeSubtract}">
