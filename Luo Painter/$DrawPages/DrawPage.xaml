                                    </StackPanel>
                                    <StackPanel Orientation="{x:Bind DevicePhoneToOrientationVerticalConverter(Device), Mode=OneWay}" >
                                        <Grid Padding="8,0" Height="60" 
                                              Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <RepeatButton x:Name="RadianRemoveButton" Padding="4,2" CornerRadius="4,0,0,4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch" >
                                                <SymbolIcon Symbol="Refresh">
                                                    <UIElement.RenderTransformOrigin>
                                                        0.5, 0.5
                                                    </UIElement.RenderTransformOrigin>
                                                    <UIElement.RenderTransform>
                                                        <ScaleTransform ScaleX="-1"/>
                                                    </UIElement.RenderTransform>
                                                </SymbolIcon>
                                            </RepeatButton>
                                            <Button x:Name="RadianClearButton" Grid.Column="1" CornerRadius="0" Height="40" BorderThickness="1" HorizontalAlignment="Stretch"
                                                    Content="{strings:ElementIcon Type=ResetRadian}">
                                                <ToolTipService.ToolTip>
                                                    <ToolTip Content="{strings:Element Type=ResetRadian}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                                                </ToolTipService.ToolTip>
                                            </Button>
                                            <RepeatButton x:Name="RadianAddButton" Grid.Column="2" Padding="4,2" CornerRadius="0,4,4,0" Height="40" BorderThickness="1" HorizontalAlignment="Stretch" >
                                                <SymbolIcon Symbol="Refresh"/>
                                            </RepeatButton>
                                        </Grid>
                                        <Grid Padding="8,0" Height="60" 
                                              Width="{x:Bind ReverseDevicePhoneToWidth260Converter(Device), Mode=OneWay}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <RepeatButton x:Name="ScaleRemoveButton" Padding="4,2" CornerRadius="4,0,0,4" Height="40" BorderThickness="1" HorizontalAlignment="Stretch" >
                                                <SymbolIcon Symbol="Remove"/>
                                            </RepeatButton>
                                            <Button x:Name="ScaleClearButton" Grid.Column="1" CornerRadius="0" Height="40" BorderThickness="1" HorizontalAlignment="Stretch" 
                                                    Content="{strings:ElementIcon Type=ResetScale}">
                                                <ToolTipService.ToolTip>
                                                    <ToolTip Content="{strings:Element Type=ResetScale}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
                                                </ToolTipService.ToolTip>
                                            </Button>
                                            <RepeatButton x:Name="ScaleAddButton" Grid.Column="2" Padding="4,2" CornerRadius="0,4,4,0" Height="40" BorderThickness="1" HorizontalAlignment="Stretch" >
                                                <SymbolIcon Symbol="Add"/>
                                            </RepeatButton>
                                        </Grid>
                                    </StackPanel>
                                    <transformers:RemoteControl 
                                        x:Name="RemoteControl"
                                        Visibility="Collapsed"
                                        BorderThickness="1" 
                                        BorderBrush="{ThemeResource AppStroke}" 
                                        Background="{ThemeResource SystemAltLowColor}" 
                                        Foreground="{ThemeResource SystemControlBackgroundBaseHighBrush}" 
                                        />
                                </StackPanel>
                            </ui:OptionCase>
                            <ui:OptionCase Value="Straw">
                                <ListBox x:Name="StrawComboBox" SelectedIndex="0" Margin="12,0" Style="{StaticResource AppSegmentListBoxStyle}">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{strings:UI Type=Straw_Object}" Placement="Top" Style="{StaticResource AppToolTipStyle}"/>
